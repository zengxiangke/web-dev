{
  "compilerOptions": {
    "strict": true,

    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": ["DOM", "ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
